<div class="container">

  <% if @user.picture_url == nil %>

      <div class="row">
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= @user.formatted_name%></span>
              <p>Location: <%= @user.location %></p>
              <p>Trips Curated: <%= @user.trips.count %></p>
              <p># of users that attended a trip you created: <%= @user.total_trip_attendees %>
              <p>Trips Attended: <%= @user.attended_trips.count %></p>
            </div>
            <div class="card-action">
              <%= link_to "Edit Your Profile", edit_user_path(@user) %>
            </div>
          </div>
        </div>
      </div>

  <% else %>
  <% end %>

<h2>My Trips:</h2>
<% @user.trips.each do |trip| %>
  <ul>
    <li><%= trip.name %> created <%= time_ago_in_words(trip.created_at) %> ago</li>

      <ul>
      <% trip.locations.each do |location| %>
        <li><%= location.name %></li>
    <% end %>
      </ul>
  </ul>
<% end %>

<h2>Favorites:</h2>
<% @user.favorites.each do |favorite| %>
  <%= favorite.trip.name %> made by <%=favorite.trip.creator.formatted_name %>

<% end %>

</div>