<div class="container">

  <h1>Edit Your Profile</h1>
  <%= form_for @user do |f| %>


  <h4><%= f.label :first_name %> </h4>
    <div class="input-field">
      <%= f.text_field :first_name %>
    </div>

  <h4><%= f.label :last_name %> </h4>
    <div class="input-field">
      <%= f.text_field :last_name %>
    </div>


  <h4><%= f.label :location %></h4>
    <div class="input-field">
      <%= f.text_field :location %>
    </div>

  <h4><%= f.label :email %></h4>
    <div class="input-field">
      <%= f.text_field :email %>
    </div>

    <h4><%= f.label :upload_profile_picture %></h4>
    <%= f.file_field :picture %>

    <h4><%= f.label :confirm_password %></h4>
    <div class="input-field">
      <%= f.password_field :password %>
    </div>

  <% if @user.errors.any? %>
      <% @user.errors.full_messages.each do |msg| %>
        <h5><%= msg %></h5>
      <% end %>
  <% end %>

  <%= f.submit "Edit", :class => "waves-effect waves-light btn-large light-blue" %>
<% end %>


</div>
