<% if user_signed_in? %>
  <%= render partial: 'video_header' %>
<div class="container center-align">
<div class="row">
  </div>
  <div class="row">
    <div class="col s12 m6 l6">
      <%= link_to "Find a trip", trips_path, class: "waves-effect waves-light btn-large light-blue darken-2" %>
    </div>
    <div class="col s12 m6 l6">
      <%= link_to "Create a new trip", new_trip_path, class: "waves-effect waves-light btn-large deep-orange" %>
    </div>
  </div>
</div>

<h2>Trending Trips</h2>
<% @featured.each do |featured| %>
  <p><%= "#{featured.name}, created by #{featured.creator.formatted_name} #{time_ago_in_words(featured.created_at)} ago" %></p>
<% end %>

</div>

<% else %>
<%= render partial: 'new_user_home' %>
<% end %>