<% if user_signed_in? %>
<%= render partial: 'video_header' %>

<%= image_tag('mobile-header.png', width: "100%", height: "495px", class: "hide-on-large-only") %>
<div id="overlay" class="container center-align hide-on-large-only">
  <div class="container">
    <div class="row">
      <div class="center col s12">
        <div class="card-panel home-card-mobile">
          <h4 class="deep-orange-text">localeyes</h4>
        <p id="mobile-top-p" class="light-blue-text text-darken-2">An app that connects tourists to day trips curated by locals.</p>
        </div>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col s12 m12 l12">
      <%= link_to "Find a trip", trips_path, class: "btn-flat light-blue darken-2" %>
    </div>
    <div class="col s12 m12 l12">
      <%= link_to "Create a new trip", new_trip_path, class: "btn-flat deep-orange" %>
    </div>
  </div>
</div>

<div class="container">
  <h2>Trending Trips</h2>
  <div class="row">
  <% @featured.each do |featured| %>
    <div class="col s12 m6 m6">
      <%= render partial: 'trips/trip_card', locals: { trip: featured } %>
    </div>
  <% end %>
  </div>
</div>

<% else %>
<%= render partial: 'new_user_home' %>
<% end %>