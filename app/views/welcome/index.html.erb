<% if user_signed_in? %>
<div class="container center-align">
<p> This will be the home page if a user is logged in </p>

<h2>Trending Trips</h2>
<% @featured.each do |featured| %>
  <p><%= "#{featured.name}, created by #{featured.creator.formatted_name} #{time_ago_in_words(featured.created_at)} ago" %></p>
<% end %>

<%= link_to "Create a new trip", new_trip_path, class: "waves-effect waves-light btn-large light-blue" %>
</div>

<% else %>
<%= render partial: 'new_user_home' %>
<% end %>