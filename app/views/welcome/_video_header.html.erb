<div class="video-container hide-on-med-and-down">
    <div class="video-fade">
        <video autoplay loop id="header-video">
          <source "<%= video_tag( 'localeyes.mp4' ) %>" type="video/mp4">
        </video>
    </div>
    <div id="overlay">
        <div class="container">
            <p>localeyes</p>
            <h5>An app that connects tourists to day trips curated by locals.</h5>
        </div>
        <% if user_signed_in? %>
            <div class="container center-align">
              <div class="row">
                <div class="col s12 m12 l12">
                  <%= link_to "Find a trip", trips_path, class: "waves-effect waves-light btn-large light-blue darken-2" %>
                </div>
                <div class="col s12 m12 l12">
                  <%= link_to "Create a new trip", new_trip_path, class: "waves-effect waves-light btn-large deep-orange" %>
                </div>
              </div>
            </div>
          <% else %>
            <a href="/trips" class="waves-effect waves-light btn-large deep-orange hoverable">Browse Trips</a>
        <% end %>
    </div>
</div>
