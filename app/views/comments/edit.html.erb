<h1>Edit Your Comment </h1>

<%= form_for @comment do |f| %>

<% if @comment.errors.any? %>
    <p><%=pluralize(@comment.errors.count, "error") %> prevented this item from saving.</p>
    <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
<%end%>

  <p>
    <label for="body">Edit your comment</label>
    <%=f.text_field :body, hide_label: true %>
  </p>

    <%=f.hidden_field :trip_id, :value => @trip.id %><br>
    <%=f.hidden_field :user_id, :value => current_user.id %><br>

   <p>
    <%=f.submit "Edit" %>
  </p>
<% end %>

<%= link_to 'Back', trip_path(@trip) %>