<h1><%=@tag.name%></h1>

<section id="trip-list-holder">
    <% @trips.each do |trip| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= link_to trip.name, trip_path(trip)%></span>
            <% trip.locations.each do |location|%>
            <ul>
              <li><%=location.name%></li>
            </ul>
            <%end%>
          </div>
          <div class="card-action">
            <span>Created by: <%= link_to trip.creator.formatted_name %></a>
              <% if trip.tags.count > 0 %>
              <div class="chip">
                <% trip.tags.each do |tag| %>
                #<%= tag.name %>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </section>
