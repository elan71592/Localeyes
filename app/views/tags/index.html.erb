<h1> trips by tag name </h1>

 <div class="row">
  <%@tags.each do |tag| %>
    <div class="chip-container" id="tag-bubbles">
      <% @animations = [ 'bounceInUp', 'bounceInDown' ] %>
      <%= link_to "##{tag.name}", tag_path(tag), class: "animate-tag wow #{@animations.sample}" %>
    </div>
  <% end %>
</div>
<%= link_to "Search Trips", trips_path, class: "waves-effect waves-light btn light-blue" %>

<script>
  wow = new WOW(
    {
      animateClass: 'animated',
      offset:       100,
    }
  );
  wow.init();

  $(document).ready(function() {
  	$('.animate-tag').jqFloat({
  		width: 10,
  		height: 15,
  		speed: 1000
  	});
  });
</script>
