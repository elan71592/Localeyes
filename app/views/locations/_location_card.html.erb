  <div class="row">
    <div class="col s12 m12 l12">
      <div class="card trip-card light-blue darken-2">
        <div class="card-content white-text hoverable">
          <div class="card-title"><%= location.name %></div>
          <ul>
            <li><%= location.address %></li>
            <li><%= location.phone_number %></li>
            <li><%=link_to "go to website", "#{location.website_url}", target: "_blank", class: "location-details-website-link" %></li>
          </ul>
        </div>
          <div class="divider"></div>
        <div class="card-action white">
             <%= form_for :location, url: "/trips/#{ trip.id }/locations/#{ location.id }", method: :put do |f| %>
              <label for="Note" class="grey-text text-darken-1">Add a Personalized Note</label>
              <div class="input-field new-location">
                <%=f.text_field :personal_note, hide_label: true %>
              </div>
              <label for="Time Needed" class="grey-text text-darken-1">Time Needed</label>
              <%= f.select(:duration, options_for_select([[".5 hours", ".5 hours"],["1 hour", "1 hour"], ["1.5 hours", "1.5 hours"], ["2 hours", "2 hours"], ["2.5 hours", "2.5 hours"], ["3 hours", "3 hours"], ["3.5 hours", "3.5 hours"], ["4 hours", "4 hours"], ["4.5 hours", "4.5 hours"], ["5 hours", "5 hours"], ["5.5 hours", "5.5 hours"], ["6+ hours", "6+ hours"]])) %>
          <div class="row">
            <div class="container">
          <%=f.submit "Save", class: "orange-text text-accent-2", id: "submit" %>
            <% end %>
          <%= link_to "Delete", url: "/trips/#{ trip.id }/locations/#{ location.id }", class: "orange-text text-accent-2", id: "delete-post" %>
            </div>
        </div>
      </div>
    </div>
  </div>
</div>


