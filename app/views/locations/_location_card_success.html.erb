<div class="row">
  <div class="col s12 m7">
    <div class="card">
      <div class="card-image">
        <img src=<%= location.picture_url %> >
        <span class="card-title"><%= location.name %></span>
      </div>
      <div class="card-content">
        <ul>
          <li><%= location.address %></li>
          <li><%= location.phone_number %></li>
          <li><%=link_to location.website_url, "#{location.website_url}", target: "_blank"%></li>
          <li><%= location.personal_note %></li>
          <li><%= location.duration %></li>
        </ul>
        <p> This location has been added!</p>
        <div class="input-field col s6">

        </div>
      </div>
      <div class="card-action">
        <%= link_to "Delete", url: "/trips/#{ trip.id }/locations/#{ location.id }" %>
      </div>
    </div>
  </div>
</div>
