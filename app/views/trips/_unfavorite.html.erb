<h4>You favorited <%= trip.name %></h4>
<%= form_for current_user.favorites.find_by(trip_id: trip.id), html: { method: :delete, class: "unfavorite-submit"} do |f| %>
  <div><%= hidden_field_tag "trip_id", "#{trip.id}" %></div>
  <%= f.submit "unfavorite", class: "waves-effect waves-light btn" %>
<% end %>
<br>