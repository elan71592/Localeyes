<div class="container">
  <h1>Pick A Day Trip</h1>
<section id="search-bar">
  <p>Search for a trip by tag name(ex. "foodie", "SoHo", "beer")</p>


  <%= form_tag(trips_path, :method => "get") do %>
  <div class="input-field">
    <%= text_field_tag :search, params[:search] %>
  </div>
<% end %>

  <span id="search-button">
    <%= submit_tag("Search", :class => "waves-effect waves-light btn-large light-blue")  %>
  </span>
  <span id="search-button">
    <a href="/tags" class="waves-effect waves-light btn-large light-blue">explore</a>
  </span>



</section>

  <%if @message %>
    <p> <%=@message %></p>
  <% end %>

  <h1><%=@header%></h1>
  <div class="row">
      <div class="col s6 index-trip-column">
        <% @trips_to_display.first(5).each do |trip| %>
        <%= render partial: 'trip_card', locals: { trip: trip } %>
        <% end %>
      </div>
      <div class="col s6">
        <% @trips_to_display[6..10].each do |trip| %>
        <%= render partial: 'trip_card', locals: { trip: trip } %>
        <% end %>
      </div>
  </div>
    <div class="center">
      <a href="/tags" class="waves-effect waves-light btn-large deep-orange">explore</a>
    </div>
  </div>

