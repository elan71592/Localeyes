<div class="container">
  <h1>Pick A Day Trip</h1>

<% @trips_to_display.first(3).each do |trip| %>
<%= render partial: 'trip_card', locals: { trip: trip } %>
<% end %>



<section id="search-bar">
  <p>Search for a trip by tag name(ex. "foodie", "SoHo", "beer")

<%= form_tag(trips_path, :method => "get") do %>
<%= text_field_tag :search, params[:search] %>
<%= submit_tag("Search", :class => "waves-effect waves-light btn-large")  %>
<% end %>

</section>
  <%if @message %>
    <p> <%=@message %></p>
  <% end %>

  <h1><%=@header%></h1>
  <section id="trip-list-holder">
    <% @trips_to_display.first(5).each do |trip| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%= link_to trip.name, trip_path(trip)%></span>
            <% trip.locations.each do |location|%>
            <ul>
              <li><%=location.name%></li>
            </ul>
            <%end%>
          </div>
          <div class="card-action">
            <span>Created by: <%= link_to trip.creator.formatted_name %></a>
              <% if trip.tags.count > 0 %>
              <div class="chip">
                <% trip.tags.each do |tag| %>
                #<%= tag.name %>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <a href="/tags" class="waves-effect waves-light btn-large">explore</a>
    </section>
  </div>


