<h1>Create A New Day Trip</h1>



<%= form_for :trips do |f| %>
  Trip Name: <%= f.text_field :name %><br />
  <%=f.hidden_field :user_id %><br>
  <%= f.submit "Create New Trip"%>
<% end %>



<h2>Choose Location 1: </h2>
<%= form_for :locations do |f| %>
  Location Name: <%= f.text_field :name %><br />
    <%=f.hidden_field :place_id %><br>
  Address : <%= f.text_field :street_num, placeholder: "street number" %>
    <%= f.text_field :street, placeholder: "street name"%><br />
    <%= f.text_field :city, placeholder: "city" %>
    <%= f.text_field :state, placeholder: "state" %>
    <%= f.text_field :country, placeholder: "country" %><br/><br/>
  Picture : <%= f.text_field :picture_url %><br />
  Phone Number: <%= f.text_field :picture_url %><br />
  Website: <%= f.text_field :website_url %><br />
    <%=f.hidden_field :trip_id, :value => @trip.id %><br/>
    <%= f.submit "Create New Stop"%>
<% end %>

