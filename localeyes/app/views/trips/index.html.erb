<h1>Pick A Day Trip</h1>

<section id="search-bar">
  <p>Search for a trip by tag name(ex. "foodie", "SoHo", "beer")
    <form>
      <input type="text" placeholder="search" />
      <input type="submit" class="waves-effect waves-light btn-large">
    </form>
  </section>

  <h1>Most Popular Trips</h1>
  <section id="trip-list-holder">
    <% @sorted_trips.first(5).each do |trip| %>
    <div class="row">
      <div class="col s12 m6">
        <div class="card blue-grey darken-1">
          <div class="card-content white-text">
            <span class="card-title"><%=trip.name%></span>
            <% trip.locations.each do |location|%>
            <ul>
              <li><%=location.name%></li>
            </ul>
            <%end%>
          </div>
          <div class="card-action">
            <span>Created by: <%= link_to trip.creator.formatted_name %></a>
              <% if trip.tags.count > 0 %>
              <div class="chip">
                <% trip.tags.each do |tag| %>
                #<%= tag.name %>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </section>