      <div class="row">
        <div class="col s12 m7">
          <div class="card">
            <div class="card-image">
              <img src=<%= @location.picture_url %> >
              <span class="card-title"><%= @location.name %></span>
            </div>
            <div class="card-content">
              <ul>
                <li><%= @location.address %></li>
                <li><%= @location.phone_number %></li>
                <li><%= @location.website_url %></li>
                <%= form_for :location do |f| %>


                  <label for="Note">Add a Personalized Note</label>
                  <%=f.text_field :personal_note, hide_label: true %>
                  <label for="Time Needed">Time Needed</label>
                  <%=f.text_field :duration, hide_label: true %>


                <%=f.hidden_field :trip_id, :value => @trip.id %>
                <%=f.hidden_field :user_id, :value => current_user.id %>

              </ul>

              <div class="input-field col s6">

              </div>
            </div>
            <div class="card-action">
              <%= link_to "Delete", trip_location_path(@trip, @location), method: "delete" %>
              <%=f.submit "Save" %>
              <% end %>
            </div>




          </div>
        </div>
      </div>



